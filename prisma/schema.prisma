generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @default(uuid())
  username         String        @unique
  email            String        @unique
  password         String
  name             String?
  credentials      Credential[]
  receivedMappings UserMapping[] @relation("RecipientUserMapping")
  sentMappings     UserMapping[] @relation("ConferrerUserMapping")

  @@index([username])
  @@index([email])
}

model Credential {
  id                String              @id @default(uuid())
  key               String
  value             String
  userId            String
  lastUpdated       DateTime            @updatedAt
  user              User                @relation(fields: [userId], references: [id])
  CredentialMapping CredentialMapping[]

  @@index([userId])
}

model UserMapping {
  id                String              @id @default(uuid())
  conferrerId       String // master 
  recipientId       String // slave
  conferrer         User                @relation("ConferrerUserMapping", fields: [conferrerId], references: [id])
  recipient         User                @relation("RecipientUserMapping", fields: [recipientId], references: [id])
  CredentialMapping CredentialMapping[]

  @@unique([conferrerId, recipientId])
  @@index([conferrerId])
  @@index([recipientId])
}

model CredentialMapping {
  id            String      @id @default(uuid())
  credentialId  String
  userMappingId String
  credential    Credential  @relation(fields: [credentialId], references: [id])
  userMapping   UserMapping @relation(fields: [userMappingId], references: [id])

  @@unique([credentialId, userMappingId])
  @@index([credentialId])
  @@index([userMappingId])
}
